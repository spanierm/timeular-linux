{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "mocha": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "brace-style": ["error", "stroustrup"],
    "curly": ["error"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  }
}
